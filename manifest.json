{
  "manifest_version": 3,
  "name": "HubSpot Highlighter",
  "version": "1.1.0",
  "description": "Highlight important items in HubSpot. Using 'Last Activity Date' as guide, so this must be present in the view",
  "permissions": ["storage"],
  "host_permissions": ["https://app.hubspot.com/*", "https://app-eu1.hubspot.com/*"],
  "content_scripts": [
    {
      "matches": ["https://app.hubspot.com/*", "https://app-eu1.hubspot.com/*"],
      "css": ["styles.css"],
      "js": ["content.js", "lightbox.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
